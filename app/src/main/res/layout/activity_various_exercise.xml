<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.VariousExercise">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listofExercise_RV"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:padding="5dp" />


    <LinearLayout
        android:gravity="center"
        android:id="@+id/restView"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gif_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_margin="5dp"
            app:lottie_fileName="tea.json"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/wt_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:fontFamily="cursive"
            android:text="Today is Rest."
            android:textStyle="bold"
            android:textColor="#D0C55437"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</RelativeLayout>